<%= simple_form_for(@articulos_factura) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :articulos, collection: User.find(current_user.id).articulos, include_blank: false %>
    <%= f.input :precio_u, :label => 'Precio unitario' %>
    <%= f.input :cantidad, :label => 'Cantidad' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
