<h2>Editar información <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true, :label => 'Correo electrónico', :placeholder => 'algo123@dominio.com' %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Esperando confirmación para: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, :autocomplete => "off", :hint => "Dejar en blanco si no desea cambiarlo", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "Proporcione su contraseña actual para efectuar cambios", :required => true, :label => 'Contraseña' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Modificar", :class => 'btn btn-primary' %>
  </div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p>Unhappy? <%= link_to "Cancelar mi cuenta", registration_path(resource_name), :data => { :confirm => "¿Está seguro(a)?" }, :method => :delete %></p>

<%= link_to "Regresar", :back %>
