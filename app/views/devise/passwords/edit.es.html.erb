<h2>Cambiar contraseña</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden, :labe => "Token de reinicio" %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :label => "Nueva contraseña", :required => true, :autofocus => true %>
    <%= f.input :password_confirmation, :label => "Confirmar nueva contraseña", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Aceptar cambio", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
